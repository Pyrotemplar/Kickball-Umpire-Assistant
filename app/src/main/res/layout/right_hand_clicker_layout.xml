<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/right_hand_layout"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/outButton"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_press"
        android:text="OUT"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/strikeButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kickerIsSafeButton"
        android:layout_width="95dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_press"
        android:text="KICK IS SAFE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toRightOf="@+id/ballButton"
        app:layout_constraintTop_toBottomOf="@+id/foulButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/runnerScoredButton" />

    <Button
        android:id="@+id/runnerScoredButton"
        android:layout_width="95dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_press"
        android:text="RUNNER SCOREd"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintTop_toBottomOf="@+id/strikeButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/kickerIsSafeButton"
        app:layout_constraintVertical_bias="0.388"
        app:layout_constraintLeft_toRightOf="@+id/foulButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/foulButton"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_press"
        android:text="FOUL"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintTop_toBottomOf="@+id/strikeButton"
        app:layout_constraintLeft_toLeftOf="@+id/outButton"
        app:layout_constraintRight_toRightOf="@+id/strikeButton" />

    <Button
        android:id="@+id/strikeButton"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_press"
        android:text="STRIKE"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toRightOf="@+id/outButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ballButton"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_press"
        android:text="BALL"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/outButton"
        app:layout_constraintRight_toRightOf="@+id/foulButton"
        app:layout_constraintTop_toBottomOf="@+id/foulButton" />
</android.support.constraint.ConstraintLayout>